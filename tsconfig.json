{
    "compilerOptions": {
      "allowJs": true,
      "strictNullChecks": false,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "jsx": "react",
      "jsxFactory": "React.createElement",
      "module": "commonjs",
      "moduleResolution": "node",
      "noEmitOnError": true,
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "outDir": "build",
      "preserveConstEnums": true,
      "removeComments": true,
      "rootDir": "src",
      "sourceMap": true,
      "target": "es5",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "dom",
        "es2015",
        "scripthost"
      ]
    },
    "include": [
      "src/globalTSTypes.ts",
      "src/index.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "**/*.spec.tsx",
      "**/*.mobile.tsx",
      "**/*.mobile.ts",
      "**/*.mobile.ios.tsx",
      "**/*.mobile.ios.ts",
      "**/*.mobile.android.tsx",
      "**/*.mobile.android.ts"
    ]
  }
